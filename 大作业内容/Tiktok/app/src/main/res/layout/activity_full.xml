<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <com.example.tiktok.player.VideoPlayerIJK
        android:id="@+id/full"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <LinearLayout
        android:layout_width="80dp"
        android:layout_height="wrap_content"
        android:layout_above="@id/name"
        android:layout_alignEnd="@id/full"
        android:layout_margin="20dp"
        android:gravity="center"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/like"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:src="@drawable/like" />

        <TextView
            android:id="@+id/likecount"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dp"
            android:gravity="center"
            android:textColor="#ffffff"
            android:textSize="15sp" />

        <ImageView
            android:id="@+id/collection"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:src="@drawable/collection" />

        <TextView
            android:id="@+id/collectioncount"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dp"
            android:gravity="center"
            android:textColor="#ffffff"
            android:textSize="15sp" />
    </LinearLayout>


    <TextView
        android:id="@+id/name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@id/description"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:layout_marginBottom="10dp"
        android:gravity="start"
        android:textColor="#ffffff"
        android:textSize="21sp" />

    <TextView
        android:id="@+id/description"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@id/full"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:layout_marginBottom="100dp"
        android:gravity="start"
        android:textColor="#ffffff"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/text1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@id/plus"
        android:layout_alignBottom="@id/full"
        android:layout_marginStart="50dp"
        android:layout_marginBottom="45dp"
        android:gravity="start"
        android:textColor="#ffffff"
        android:textSize="21sp" />

    <TextView
        android:id="@+id/text2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignStart="@id/text1"
        android:layout_alignEnd="@id/plus"
        android:layout_alignBottom="@id/full"
        android:layout_marginStart="62dp"
        android:layout_marginBottom="45dp"
        android:gravity="start"
        android:textColor="#ffffff"
        android:textSize="21sp" />

    <ImageView
        android:id="@+id/plus"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:layout_alignBottom="@id/full"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="40dp"
        android:src="@drawable/plus" />

    <TextView
        android:id="@+id/text3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignStart="@id/plus"
        android:layout_alignEnd="@id/text4"
        android:layout_alignBottom="@id/full"
        android:layout_marginEnd="62dp"
        android:layout_marginBottom="45dp"
        android:gravity="end"
        android:textColor="#ffffff"
        android:textSize="21sp" />

    <TextView
        android:id="@+id/text4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignStart="@id/plus"
        android:layout_alignBottom="@id/full"

        android:layout_marginEnd="50dp"
        android:layout_marginBottom="45dp"
        android:gravity="end"
        android:textColor="#ffffff"
        android:textSize="21sp" />
</RelativeLayout>